		<div class="field" id="location">
			<%= f.label :location, "Project Location:" %><br>
			<%= f.text_area :location, rows:10, cols:25 %>
		</div>
	</div>
  <div class="field" id="estimatedcost">
    <%= f.label :cost, "Estimated Project Cost:" %><br>
    <%= f.text_field :cost, cols:25 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
